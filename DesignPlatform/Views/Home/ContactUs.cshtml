@model DesignPlatform.Areas.Admin.ViewModels.AdminContactUsViewModels.AdminContactUsAddViewModel



<!-- Start Project Details -->
<div class="contact-us">

    <div class="header">
        <h1>Contact Us</h1>
    </div>

    <div class="container">

        <form  asp-controller="Home" asp-action="ContactUs">


            <div class="contact-address">
                <div class="row">
                    <div class="col-lg-4">
                        <a href="#">
                            <i class="fa-solid fa-location-dot"></i>
                            <span>Address</span>
                        </a>
                    </div>

                    <div class="col-lg-4">
                        <a href="mailto:example@email.com">
                            <i class="fa-regular fa-envelope"></i>
                            <span>example@email.com</span>
                        </a>
                    </div>

                    <div class="col-lg-4">
                        <a href="tel:+20102030585">
                            <i class="fa-solid fa-phone"></i>
                            <span>+20102030585</span>
                        </a>
                    </div>

                </div>

            </div>

            <div class="contact-form">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>Name</label>
                            <input class="form-control" placeholder="Enter your name" asp-for="Name">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" placeholder="Enter your email" asp-for="Email">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>Phone</label>
                            <input type="text" class="form-control" placeholder="Enter your phone" asp-for="Phone">
                            <span class="text-danger" asp-validation-for="Phone"></span>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Tell us about your project</label>
                            <textarea class="form-control" asp-for="Message"></textarea>
                            <span class="text-danger" asp-validation-for="Message"></span>
                        </div>
                    </div>

                    <div class="buttons">
                        <button class="btn section-btn">Submit</button>
                    </div>

                    @if(Model != null)
                    {
                        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                        {
                            <div>
                                <span class="alert alert-success d-block mt-4 w-100"> @Model.SuccessMessage </span>
                            </div>
                        }
                    }

                    
                  

                </div>



            </div>
        </form>

     

    </div>



</div>
<!-- End Project Details -->