@model DesignPlatform.Areas.Admin.ViewModels.AdminSubPackagesViewModels.AdminSubPackageAddViewModel

<div class="modal fade" id="showModal" tabindex="-1" role="dialog" aria-labelledby="varyModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form class="AddFrm" asp-area="Admin" asp-controller="SubPackages" asp-action="Add" enctype="multipart/form-data">

                <div class="modal-header">
                    <h5 class="modal-title" id="varyModalLabel">Add Sub Package</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Name:</label>
                        <input type="text" class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Price:</label>
                        <input type="number" class="form-control" asp-for="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Offer header:</label>
                        <input  class="form-control" asp-for="OfferHeader">
                        <span asp-validation-for="OfferHeader" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Offer Description:</label>
                        <input  class="form-control" asp-for="OfferDescription">
                        <span asp-validation-for="OfferDescription" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label"> Description:</label>
                        <textarea rows="4" class="form-control" asp-for="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Image:</label>
                        <input type="file" class="form-control" asp-for="ImageFile">
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Features:</label>
                        <div class="FeatItems Add">
                            <div class="FeatItem d-flex mb-2">
                                <input type="text" class="form-control FeatInput Add" name="">
                                <button type="button" class="btn btn-success FeetAddBtn ml-2">
                                    <i class="fa-solid fa-plus"></i>
                                </button>
                            </div>

                        </div>
                        <span class="text-danger FeatValErr"></span>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn mb-2 btn-primary AddItemBtn">Add</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var myEditor1;
        ClassicEditor
            .create(document.querySelector('#Description'))
            .then(editor => {
                myEditor1 = editor;
            })
            .catch(err => {
                console.error(err.stack);
            });


    </script>
}