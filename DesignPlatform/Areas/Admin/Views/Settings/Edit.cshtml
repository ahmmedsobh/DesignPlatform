@model DesignPlatform.Areas.Admin.ViewModels.AdminSettingViewModels.AdminSettingEditViewModel


<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="row align-items-center mb-2">
                <div class="col">
                    <h2 class="h5 page-title">Setting</h2>
                </div>

            </div>

            <div class="row justify-content-center">
                <div class="col-7">


                    <div class="col-lg-12 mb-2">

                        <form asp-area="Admin" asp-controller="Settings" asp-action="Edit">
                            <div class="card shadow">

                                <div class="card-body my-n2">

                                    <div class="form-group">
                                        <label>Name</label>
                                        <textarea rows="4" class="form-control" asp-for="AboutUs"></textarea>
                                    </div>

                                </div>

                                <div class="card-footer">
                                    <button class=" btn btn-primary" type="submit">Save</button>
                                    <a href="/Admin/Accounts/ChangePassword" class="btn btn-info">Save</a>
                                </div>

                            </div>
                        </form>


                    </div>



                </div> <!-- .col-12 -->
            </div> <!-- .row -->

        </div> <!-- .col-12 -->
    </div> <!-- .row -->
</div> <!-- .container-fluid -->
@section Scripts {
    <script>
        var myEditor1;
        ClassicEditor
            .create(document.querySelector('#AboutUs'))
            .then(editor => {
                myEditor1 = editor;
            })
            .catch(err => {
                console.error(err.stack);
            });

        $(function () {
            myEditor1.setData(@Json.Serialize(Model.AboutUs));
        })

    </script>
}