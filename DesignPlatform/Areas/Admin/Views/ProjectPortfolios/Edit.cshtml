@model DesignPlatform.Areas.Admin.ViewModels.AdminProjectPortfolioViewModels.AdminProjectPortfolioEditViewModel

<div class="modal fade EditModal" id="showModal" tabindex="-1" role="dialog" aria-labelledby="varyModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-area="Admin" asp-controller="ProjectPortfolios" asp-action="Edit" enctype="multipart/form-data">

                <input asp-for="Id" type="hidden" />

                <div class="modal-header">
                    <h5 class="modal-title" id="varyModalLabel">Edit Project </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Name:</label>
                        <input type="text" class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Description:</label>
                        <textarea class="form-control" asp-for="Description" id="Description2"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Header Image:</label>
                        <input type="file" class="form-control" asp-for="ImageFile">
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Galary:</label>
                        <input type="file" class="form-control" asp-for="ImageFiles" multiple>
                        <span asp-validation-for="ImageFiles" class="text-danger"></span>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn mb-2 btn-primary">Save</button>
                </div>

            </form>
        </div>
    </div>
</div>