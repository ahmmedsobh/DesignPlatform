                            <div>
                                <form asp-area="Employee" asp-controller="Customers" asp-action="Index">

                                    <div class="row">

                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <lable>From date</lable>
                                               <input type="date" name="FromDate" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <lable>To date</lable>
                                                <input type="date" name="ToDate" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <lable>Search</lable>
                                                <input  name="SearchString" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="col-lg-6" style="margin-top: 22px;">
                                            <button class="btn btn-primary w-100">Filter</button>
                                        </div>

                                    </div>




                                </form>

                            </div>


                            <!-- table -->
                            <table class="table table-borderless table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Order date</th>
                                        <th>Order progress</th>
                                        <th>Email </th>
                                        <th>Customer name</th>
                                        <th>State</th>
                                        <th>Country</th>
                                        <th>Package name</th>
                                        <th>Assigned Designer</th>
                                        <th>Design status</th>

                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.Projects)
                                    {
                                        <tr>


                                            <td>
                                                @item.Id
                                            </td>

                                            <td>
                                                @item.Date
                                            </td>

                                            <td>
                                                @item.StatusText
                                            </td>

                                            <td>
                                                @item.Email
                                            </td>

                                            <td>
                                                @item.ClientName
                                            </td>
                                            <td>
                                                @item.StateName
                                            </td>

                                            <td>
                                                @item.CountryName
                                            </td>

                                            <td>
                                                @item.PackageName
                                            </td>

                                            <td>
                                                @item.DesignerName
                                            </td>

                                            <td>
                                                @item.DesignStatus
                                            </td>

                                            <td>
                                                <button class="btn btn-sm dropdown-toggle more-horizontal" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <span class="text-muted sr-only">Action</span>
                                                </button>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a class="dropdown-item" href="/Employee/Projects/Details/@item.Id">Details</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }



                                </tbody>
                            </table>
